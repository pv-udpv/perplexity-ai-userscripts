{
  "name": "perplexity-ai-userscripts",
  "version": "1.0.1",
  "description": "Collection of userscripts for Perplexity AI enhancement. ViteMonkey + Tampermonkey-compatible scripts for improved productivity and workflow automation.",
  "private": false,
  "author": "pv-udpv",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pv-udpv/perplexity-ai-plug.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:watch": "vite build --watch",
    "build:analyze": "vite build --analyze",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=junit",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit --strict",
    "scaffold": "node scripts/scaffold.js",
    "ci": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.10",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-monkey": "^4.0.0",
    "vitest": "^1.1.0"
  },
  "keywords": [
    "userscript",
    "tampermonkey",
    "perplexity-ai",
    "productivity",
    "browser-extension",
    "typescript",
    "vitemonkey"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": "prettier --write"
  }
}
